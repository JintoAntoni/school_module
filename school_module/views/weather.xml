<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
  <record id="res_config_inherit" model="ir.ui.view">
            <field name="name">api key</field>
            <field name="model">res.config.settings</field>
            <field name="priority">20</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='languages']" position="after">
                    <div id="api_settings">
                            <h2>Weather</h2>
                            <div class="row mt16 o_settings_container" name="weather_setting_container">
                                <div class="col-xs-12 col-md-6 o_setting_box" id="sms">
                                        <div class="o_setting_right_pane" id="sms_settings">
                                            <div class="o_form_label">
                                            API KEY
                                            </div>
                                            <div class="text-muted">
                                                <field name="api_key"/>
                                            </div>
                                        </div>
                                </div>
                        </div>
                    </div>
                </xpath>
            </field>
</record>


<record id="weather_view_form" model="ir.ui.view">
            <field name="model">weather.weather</field>
            <field name="arch" type="xml">
                <form>
                    <button class="weather_update btn btn-primary" type="object"
                            name="weather_update" string="Updates"
                            />
                    <group>
                        <group>
                            <field name="name" />
                            <field name="temparature" />
                        </group>
                    </group>
                </form>
            </field>
        </record>

    <record model="ir.actions.act_window" id="weather_action_window">
            <field name="name">Weather</field>
            <field name="res_model">weather.weather</field>
            <field name="view_mode">tree,form</field>
        </record>


      <menuitem
                id="menu_weather_id"
                name="Weather"
                action="weather_action_window"
                                sequence="1"/>


</odoo>
